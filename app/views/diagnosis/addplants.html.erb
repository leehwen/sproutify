<%# <%= render 'shared/plant_cards', plants: @plants %>

<div class="px-3">
  <div class="mt-4">
    <h1>
      Add Diagnosis to Plant
    </h1>
    <p>
      Please pick a plant from your garden to assign the diagnosis to:
    </p>
  </div>

  <% @plants.each do |plant| %>
    <div class="row gx-0">
      <div class="plant-card col-sm-12 col-lg-4">
        <%= link_to plant_add_diagnosis_path(plant, @illness), class: "text-decoration-none text-dark" do %>
          <% if plant.image.attached? %>
            <%= cl_image_tag plant.image.key, class: "plant-card-image" %>
          <% else %>
            <%= image_tag("plant_sample_10.jpg", class: "plant-card-image") %>
          <% end %>
            <div class="plant-card-content">
              <p class="m-0"><strong>Nickname: </strong><%= plant.nickname %></p>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>
</div>
