<%# <%= render 'shared/plant_cards', plants: @plants %>
<div class="add-plants-container">
  <div class="row justify-content-center">

    <div class="mt-2 mb-2 col-sm-12 col-lg-6">
      <div class="d-flex mb-4">
        <div class="d-flex align-items-center me-2">
            <%= link_to diagnose_path do %>
              <i class="back-button fa-solid fa-angles-left"></i>
            <% end %>
        </div>

        <div>
          <h1 class="m-0">
            Add Diagnosis to Plant
          </h1>
        </div>
      </div>

      <div>
        <p class="m-0 mb-1">
          Please pick a plant from your garden to assign the diagnosis to:
        </p>
      </div>
    </div>

  </div>

   <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-6 mb-4">

      <div class="grid-container">
        <% @plants.each do |plant| %>
          <div class="grid-item plant-card-sm">
            <%= link_to plant_add_diagnosis_path(plant, @illness), class: "text-decoration-none text-dark" do %>
            <% if plant.image.attached? %>
              <%= cl_image_tag plant.image.key, class: "plant-card-image" %>
            <% else %>
              <%= image_tag plant.plant_info.image_url, class: "plant-card-image" %>
            <% end %>
              <div class="plant-card-content">
                <p class="m-0"><strong>Nickname: </strong><%= plant.nickname %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>

</div>
