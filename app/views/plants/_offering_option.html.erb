<div class="grid-item plant-card-sm" data-plant-id="<%= plant.id %>">
  <% if plant.image.key? %>
    <%= cl_image_tag plant.image.key %>
  <% else %>
    <%= image_tag plant.plant_info.image_url, class: "plant-card-image" %>
  <% end %>
  <div class="plant-card-content">
    <h3><%= plant.nickname %></h3>
  </div>
</div>
