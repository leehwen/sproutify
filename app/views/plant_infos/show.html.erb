
<div class="identifier-main">
  <div class="identify-header">
    <h1><strong>This is the plant you searched!</strong></h1>
  </div>

  <img src=<%= @plant_info.image_url %> alt=<%= @plant_info.name%> class="identify-image">

  <h2> Plant Species </h2>
  <p> <%= @plant_info.name %> </p>

  <h2> Description </h2>
  <p> <%= @plant_info.description %> </p>

  <h2> Other common names </h2>
  <p> <%= @plant_info.common_names %> </p>

  <h2> Propagation methods </h2>
  <%  JSON.parse(@plant_info.propagation).each do |f| %>
    <p> <%= f %> </p>
  <% end %>

  <h2> Watering methods </h2>
  <p> <%= @plant_info.watering %> </p>
</div>

<div class="d-flex justify-content-center">
  <%= link_to "Identify again", new_plant_info_path, class:"btn btn-primary p-3" %>
  <%= link_to "Add plant to Garden", new_plant_info_plant_path(@plant_info), class:"btn btn-primary p-3" %>
</div>
