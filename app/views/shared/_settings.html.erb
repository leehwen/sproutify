<div class="dropdown">

  <button class="sp-settings border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    <i class="fa-solid fa-gear"></i>
  </button>

  <ul class="dropdown-menu">
    <% if user_signed_in? %>
      <li>
        <%= link_to "Account Settings", "#", class: "dropdown-item" %>
      </li>
      <% if current_user.buddies.blank? %>
        <li>
          <%= link_to "Add Buddy", buddies_path, class: "dropdown-item" %>
        </li>
      <% else %>
        <li>
          <%= link_to "My Buddies", buddies_path, class: "dropdown-item" %>
        </li>
      <% end %>
      <li>
        <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      </li>
    <% else %>
      <li>
        <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
      </li>
      <li>
        <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
      </li>
    <% end %>
  </ul>

</div>
