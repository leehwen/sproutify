<div data-controller="offering-option">
  <% @plants.each do |plant|%>
    <div data-plant-id="<%= plant.id %>" data-action="click->offering-option#add">
      <% if plant.image.key? %>
        <%= cl_image_tag plant.image.key %>
      <% else %>
        <%= image_tag("plant_sample_10.jpg", class: "image-card") %>
      <% end %>
      <%= plant.nickname %>
    </div>
  <% end %>
  <br>
  <br>
  <h1>
    Selected
  </h1>

  <div data-offering-option-target="selectedOffering">
  </div>

<input data-offer-id="<%= @offer.id %>" data-action="click->offering-option#create" class="btn btn-primary" type="submit" value="Submit">

</div>
